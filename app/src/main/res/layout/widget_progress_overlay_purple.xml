<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_thin_border_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/margin_spacing_tiny">

    <ProgressBar
        android:id="@+id/progress_icon"
        android:layout_width="@dimen/notification_header_height"
        android:layout_height="@dimen/notification_header_height"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/ic_loading" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_spacing_small"
        android:text="@string/restarting"
        android:textColor="@color/purple"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>