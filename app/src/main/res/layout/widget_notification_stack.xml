<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_cardview"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="@dimen/cardview_elevation"
            app:cardBackgroundColor="@color/main_background_color"
            android:layout_marginTop="@dimen/margin_spacing_tiny"
            android:layout_marginStart="@dimen/margin_spacing_small"
            android:layout_marginEnd="@dimen/margin_spacing_small"
            app:layout_constraintTop_toTopOf="@+id/middle_cardview"
            app:layout_constraintEnd_toEndOf="@+id/middle_cardview"
            app:layout_constraintStart_toStartOf="@+id/middle_cardview">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/main_background_color"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/middle_cardview"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin_spacing_tiny"
            android:layout_marginStart="@dimen/margin_spacing_small"
            android:layout_marginEnd="@dimen/margin_spacing_small"
            app:cardElevation="@dimen/cardview_elevation"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/main_background_color"
            app:layout_constraintTop_toTopOf="@+id/top_cardview"
            app:layout_constraintEnd_toEndOf="@+id/top_cardview"
            app:layout_constraintStart_toStartOf="@+id/top_cardview">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/main_background_color"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/top_cardview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/main_background_color"
            app:cardElevation="@dimen/cardview_elevation"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_cardview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottom_cardview"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="@+id/top_cardview"
                app:layout_constraintEnd_toEndOf="@+id/top_cardview"
                app:layout_constraintStart_toStartOf="@+id/top_cardview">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_spacing_tiny">

                <View
                    android:id="@+id/ty"
                    android:layout_width="@dimen/margin_spacing_tiny"
                    android:layout_height="0dp"
                    android:background="@drawable/notification_card_vertical_bar"
                    app:layout_constraintBottom_toBottomOf="@+id/notification_msg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Planned outage soon"
                    android:paddingStart="@dimen/margin_spacing_tiny"
                    android:paddingEnd="@dimen/margin_spacing_tiny"
                    style="@style/SubHeading"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:layout_constraintStart_toEndOf="@+id/ty"
                    app:layout_constraintEnd_toStartOf="@+id/notification_dismiss_button"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/notification_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_spacing_tiny"
                    android:paddingBottom="@dimen/margin_spacing_tiny"
                    android:paddingEnd="@dimen/margin_spacing_tiny"
                    android:maxLines="2"
                    android:ellipsize="marquee"
                    android:textSize="12sp"
                    android:textColor="@color/blue_dark"
                    tools:text="Our network in your area will be down for in your area will be down for maintanence on March 26th at 8:00AM"
                    app:layout_constraintStart_toEndOf="@+id/ty"
                    app:layout_constraintEnd_toStartOf="@+id/notification_dismiss_button"
                    app:layout_constraintTop_toBottomOf="@+id/notification_title"
                    />

                <ImageView
                    android:id="@+id/notification_dismiss_button"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:tint="@color/blue"
                    android:src="@drawable/ic_close"
                    android:layout_marginEnd="@dimen/margin_spacing_tiny"
                    android:padding="@dimen/margin_spacing_tiny"
                    android:background="@color/blue_icon_bg"
                    app:layout_constraintBottom_toBottomOf="@+id/ty"
                    android:contentDescription="@string/notification"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ty" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>