<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/sub_header_leftIcon"
        android:layout_width="@dimen/close_icon_size"
        android:layout_height="@dimen/close_icon_size"
        android:padding="8dp"
        android:tint="@color/grey"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_details"
        android:textColor="@android:color/black"
        android:textSize="@dimen/medium_title_text_size"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/sub_header_leftIcon"
        app:layout_constraintTop_toTopOf="@+id/sub_header_leftIcon"
        app:layout_constraintBottom_toBottomOf="@+id/sub_header_leftIcon" />

    <ImageView
        android:id="@+id/sub_header_rightIcon"
        android:layout_width="@dimen/close_icon_size"
        android:layout_height="@dimen/close_icon_size"
        android:tint="@color/grey"
        android:src="@drawable/ic_close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub_header_leftIcon"
        app:layout_constraintBottom_toBottomOf="@+id/sub_header_leftIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>