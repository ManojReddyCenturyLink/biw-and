<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_margin_spacing"
        android:paddingTop="@dimen/margin_spacing_small"
        android:paddingEnd="@dimen/medium_margin_spacing"
        android:paddingBottom="@dimen/margin_spacing_large"
        >

        <TextView
            android:id="@+id/payment_info_first_name_label"
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/payment_info_first_name_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_thin_border"
            android:paddingStart="12dp"
            android:text="Deanthonee"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/payment_info_last_name_input"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/payment_info_first_name_label"
            />

        <EditText
            android:id="@+id/payment_info_last_name_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/background_thin_border"
            android:paddingStart="12dp"
            android:text="Greenfield"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/payment_info_first_name_input"
            app:layout_constraintTop_toTopOf="@id/payment_info_first_name_input"
            />

        <TextView
            android:id="@+id/payment_info_last_name_label"
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            app:layout_constraintStart_toStartOf="@id/payment_info_last_name_input"
            app:layout_constraintTop_toTopOf="@id/payment_info_first_name_label"
            />

        <TextView
            android:id="@+id/payment_info_credit_card_label"
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_spacing_small"
            android:text="@string/credit_card_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/payment_info_first_name_input"
            />

        <EditText
            android:id="@+id/payment_info_credit_card_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_thin_border"
            android:inputType="number"
            android:paddingStart="12dp"
            android:text="1234 - 1234 - 1234 - 1234"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/payment_info_credit_card_label"
            />

        <TextView
            android:id="@+id/payment_info_expiration_label"
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_spacing_small"
            android:text="@string/expiration_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/payment_info_credit_card_input"
            />

        <EditText
            android:id="@+id/payment_info_expiration_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_thin_border"
            android:inputType="date"
            android:maxLength="7"
            android:paddingStart="12dp"
            android:text="01 / 2020"
            app:layout_constraintEnd_toStartOf="@+id/payment_info_cvv_input"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/payment_info_expiration_label"
            />

        <EditText
            android:id="@+id/payment_info_cvv_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/background_thin_border"
            android:inputType="number"
            android:maxLength="3"
            android:paddingStart="12dp"
            android:text="123"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/payment_info_expiration_input"
            app:layout_constraintTop_toTopOf="@id/payment_info_expiration_input"
            />

        <TextView
            android:id="@+id/payment_info_cvv_label"
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cvv"
            app:layout_constraintStart_toStartOf="@id/payment_info_cvv_input"
            app:layout_constraintTop_toTopOf="@id/payment_info_expiration_label"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>