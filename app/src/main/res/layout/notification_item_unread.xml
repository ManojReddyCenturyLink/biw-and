<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#979797"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/medium_margin_spacing"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/notification_list_unread_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_white"
            android:textSize="@dimen/medium_title_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/notification_list_unread_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/notification_list_unread_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            android:textColor="@color/font_color_white"
            android:textSize="@dimen/extra_small_text_size"
            app:layout_constraintEnd_toStartOf="@+id/notification_list_unread_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notification_list_unread_title" />
        <ImageView
            android:id="@+id/notification_list_unread_image"
            android:layout_width="@dimen/notification_circle_size"
            android:layout_height="@dimen/notification_circle_size"
            android:src="@drawable/badge_background"
            android:tint="@color/font_color_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
