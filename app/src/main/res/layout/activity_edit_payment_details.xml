<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/screen_header_height" />

    <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/close_icon_size"
            android:layout_height="@dimen/close_icon_size"
            android:layout_marginStart="@dimen/margin_spacing_small"
            android:contentDescription="@string/content_description_holder"
            android:padding="8dp"
            android:src="@drawable/ic_back_blue"
            app:layout_constraintBottom_toTopOf="@id/header_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_billing_information"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/small_title_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/header_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_spacing_small"
            android:contentDescription="@string/content_description_holder"
            android:padding="12dp"
            android:text="@string/done"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/header_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <WebView
            android:id="@+id/web_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_background_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_guideline"
            tools:background="@color/grey" />

    <include
            android:id="@+id/progress_overlay"
            layout="@layout/widget_loading_overlay_transparent_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_guideline" />

    <include
            android:id="@+id/retry_overlay"
            layout="@layout/widget_retry_overlay_transparent_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_guideline" />
</androidx.constraintlayout.widget.ConstraintLayout>
