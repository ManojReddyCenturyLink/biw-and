<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_spacing_small">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appointment_status_installation_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_spacing_small"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/appointment_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fiber_installation_status"
                android:textColor="@color/blue_dark"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/appointment_status_progress_state"
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/above_cardview_elevation"
                android:text="@string/installation_scheduled"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toStartOf="@+id/appointment_status_progress_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appointment_status_title" />

            <include
                layout="@layout/widget_progress_status"
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/appointment_status_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appointment_status_title" />

            <androidx.cardview.widget.CardView
                android:id="@+id/appointment_date_time_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_spacing_small"
                android:elevation="@dimen/padding_0"
                android:padding="@dimen/margin_spacing_small"
                app:cardBackgroundColor="@color/blue_icon_bg"
                app:cardCornerRadius="@dimen/margin_spacing_really_small"
                app:cardElevation="@dimen/padding_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appointment_status_progress_state">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:padding="@dimen/margin_spacing_small"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/appointment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apr. 4th 2020"
                        android:textColor="@color/blue"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/appointment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_spacing_tiny"
                        android:text="@string/text_time_details"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/appointment_date" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/appointment_change_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_spacing_small"
                android:layout_marginEnd="@dimen/margin_spacing_small"
                android:background="@drawable/button_thin_border_background"
                android:gravity="center"
                android:text="@string/change_installation_appointment"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/extra_small_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/appointment_cancel_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appointment_date_time_card" />

            <Button
                android:id="@+id/appointment_cancel_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/padding_0"
                android:layout_height="@dimen/padding_0"
                android:layout_marginTop="@dimen/margin_spacing_small"
                android:background="@drawable/button_thin_border_background"
                android:gravity="center"
                android:text="@string/cancel_installation_appointment"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/extra_small_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appointment_change_btn"
                app:layout_constraintTop_toBottomOf="@id/appointment_date_time_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>