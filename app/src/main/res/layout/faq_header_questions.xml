<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="24dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/faq_header_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="@color/grey"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_icon_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/faq_header_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/small_title_text_size"
        android:singleLine="true"
        android:layout_marginStart="8dp"
        android:gravity="start"
        app:layout_constraintLeft_toRightOf="@+id/faq_header_arrow"
        app:layout_constraintTop_toTopOf="@+id/faq_header_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/faq_header_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>