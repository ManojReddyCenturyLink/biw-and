<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@drawable/background_rounded_card"
        >

        <TextView
            android:id="@+id/wifi_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_spacing_small"
            android:layout_marginTop="@dimen/margin_spacing_small"
            android:fontFamily="@font/arial_bold_mt"
            android:text="@string/wifi_network"
            android:textColor="@color/title_color_blue"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/wifi_card_network_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/arial_mt"
            android:text="@string/network_name_label"
            android:textColor="@color/title_color_blue"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/wifi_card_title"
            app:layout_constraintTop_toBottomOf="@id/wifi_card_title"
            />

        <TextView
            android:id="@+id/wifi_card_network_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_4"
            android:fontFamily="@font/arial_mt"
            android:text="My Home WiFi"
            android:textColor="@color/title_color_blue"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/wifi_card_network_name_label"
            app:layout_constraintTop_toTopOf="@id/wifi_card_network_name_label"
            />

        <TextView
            android:id="@+id/wifi_card_guest_network_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/arial_mt"
            android:text="@string/guest_network_name_label"
            android:textColor="@color/title_color_blue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/wifi_card_title"
            app:layout_constraintTop_toBottomOf="@id/wifi_card_network_name_label"
            />

        <TextView
            android:id="@+id/wifi_card_guest_network_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_4"
            android:fontFamily="@font/arial_mt"
            android:text="My Guest WiFi"
            android:textColor="@color/title_color_blue"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/wifi_card_guest_network_name_label"
            app:layout_constraintTop_toTopOf="@id/wifi_card_guest_network_name_label"
            />

        <View
            android:id="@+id/wifi_card_image_background"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/blue_background_rounded_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="11dp"
            android:src="@drawable/ic_three_bars"
            app:layout_constraintBottom_toBottomOf="@id/wifi_card_image_background"
            app:layout_constraintEnd_toEndOf="@id/wifi_card_image_background"
            app:layout_constraintStart_toStartOf="@id/wifi_card_image_background"
            app:layout_constraintTop_toTopOf="@id/wifi_card_image_background"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>