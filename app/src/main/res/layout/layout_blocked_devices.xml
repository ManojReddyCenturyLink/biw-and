<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_thin_border">

        <TextView
            android:id="@+id/blocked_device_name"
            android:layout_width="0dp"
            android:layout_height="54dp"
            tools:text="Jane's laptop"
            android:gravity="left|center_vertical"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/arial_mt"
            android:paddingLeft="@dimen/margin_spacing_really_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/iv_network_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_spacing_tiny"
            android:background="@color/blue_icon_bg"
            android:src="@drawable/ic_off"
            android:padding="@dimen/cardview_elevation"
            app:layout_constraintBottom_toBottomOf="@+id/blocked_device_name"
            app:layout_constraintEnd_toEndOf="@+id/blocked_device_name"
            app:layout_constraintTop_toTopOf="@+id/blocked_device_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>