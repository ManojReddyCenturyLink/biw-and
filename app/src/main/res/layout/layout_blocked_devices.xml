<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/blocked_device_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/medium_margin_spacing"
            android:layout_marginTop="@dimen/medium_margin_spacing"
            android:layout_marginEnd="@dimen/medium_margin_spacing"
            android:background="@drawable/background_thin_border"
            android:padding="@dimen/margin_spacing_tiny"
            android:text="Jane's laptop"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/blocked_network_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_spacing_tiny"
            android:background="@color/blue_icon_bg"
            android:padding="@dimen/cardview_elevation"
            app:layout_constraintBottom_toBottomOf="@+id/device_name"
            app:layout_constraintEnd_toEndOf="@+id/device_name"
            app:layout_constraintTop_toTopOf="@+id/device_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>