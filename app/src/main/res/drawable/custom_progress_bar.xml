<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/blue_dark" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:bottom="@dimen/above_cardview_elevation"
        android:left="@dimen/above_cardview_elevation"
        android:right="@dimen/above_cardview_elevation"
        android:top="@dimen/above_cardview_elevation">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="@color/blue_light" />
            </shape>
        </scale>
    </item>
</layer-list>