<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/background_purple"/>
            <padding android:top="1dp" android:bottom="1dp" android:right="1dp" android:left="1dp"/>
            <corners android:radius="@dimen/medium_margin_spacing"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/purple"/>
            <stroke android:width="1dip" android:color="@color/purple" />
            <corners android:radius="@dimen/medium_margin_spacing"/>
        </shape>
    </item>
</layer-list>
