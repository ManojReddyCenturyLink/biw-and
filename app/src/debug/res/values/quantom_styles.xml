<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <!-- Custom theme for Home Activity. -->
    <style name="AppTheme.HomeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- Custom theme for Schedule Callback Activity. -->
    <style name="AppTheme.GreyStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/grey_status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Tab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_h4</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransparentActivity" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">99%</item>
        <item name="android:windowMinWidthMinor">99%</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SubHeading" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorFields" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/strawberry</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="title_subHeader" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/medium_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SwitchButtonTheme" parent="AppTheme">
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="mycustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="choiceDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/positiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButton</item>
    </style>



    <style name="CaldroidDefaultLight" parent="CaldroidDefault">
        <item name="styleCaldroidGridView">@style/CaldroidDefaultLightGridView</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultLightSquareCell</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultWeekdayCell</item>
    </style>

    <style name="CaldroidDefaultLightGridView" parent="CaldroidDefaultLight">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CaldroidDefaultLightSquareCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/purple</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CaldroidDefaultWeekdayCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/med_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--- Pooja M status -->

    <style name="positiveButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="negativeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/negative_cta</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="primaryButtonFilled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:background">@drawable/button_thin_border_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>

    <style name="primaryButtonBordered" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fontFamily">@font/arial_mt</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:fontFamily">@font/arial_bold_mt</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_title_text_size</item>
    </style>

    <style name="TextViewButton">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/purple</item>
        <item name="fontFamily">@font/arial_bold_mt</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewProgressStatus">
        <item name="android:fontFamily">@font/arial_mt</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_4</item>
    </style>

    <style name="ButtonProgressStatus">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>

    <style name="BorderLessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/purple</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>

    <style name="SpeedTestButtonDashboard" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/speed_test_button_background_selector</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>

    <style name="StyleBackButton">
        <item name="android:src">@drawable/ic_header_back</item>
        <item name="android:tint">@color/purple</item>
    </style>

</resources>